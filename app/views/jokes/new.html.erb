<%= form_for @joke, html: { class: 'form-horizontal' } do |f| %>
  <legend>Nový vtip</legend>
  <div class='control-group'>
    <%= f.label :title, 'Názov', class: 'control-label' %>
    <div class='controls'>
      <%= f.text_field :title, class: 'input-xxlarge', placeholder: 'Krátky a výstižný názov vtipu' %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label :body, 'Príbeh', class: 'control-label' %>
    <div class='controls'>
      <%= f.text_area :body, rows: 10, class: 'input-xxlarge', placeholder: 'Text samotného vtipu alebo príbehu' %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label :advice, 'Poučenie', class: 'control-label' %>
    <div class='controls'>
      <%= f.text_area :advice, rows: 10, class: 'input-xxlarge', placeholder: 'Súvis s disciplínou softvérového inžinierstva a diskusia k pointe príbehu z odborného hľadiska' %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label :author, 'Autor', class: 'control-label' %>
    <div class='controls'>
      <%= f.text_field :author, class: 'input-xxlarge', placeholder: 'Meno a priezvisko' %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label :email, 'Email', class: 'control-label' %>
    <div class='controls'>
      <%= f.text_field :email, class: 'input-xxlarge', placeholder: 'Kontaktná emailová adresa' %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label :tags, 'Kategórie', class: 'control-label' %>
    <div class='controls'>
      <%= f.text_field :tags, class: 'input-xxlarge', placeholder: 'Zopár kľúčových slov oddelených čiarkami' %>
    </div>
  </div>
  <div class='form-actions'>
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end -%>
